{
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "target": "es5",
      "lib": ["es6", "esnext", "dom"],
      "jsx": "react",
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "allowJs": true,
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": "./",
      "paths": {
        "@client/*": ["src/client/*"],
        "@common/*": ["src/common/*"],
        "@server/*": ["src/server/*"]
      }
    },
    "include": ["./src/**/*"]
  }
  